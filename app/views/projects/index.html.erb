<h1>Proyectos</h1>

<table class="table">
  <thead class="thead-inverse">
      <tr>
      <th>Nombre</th>
      <th>Descripci√≥n</th>
      <th>Peso Total</th>
      <th colspan="4"></th>
    </tr>
  </thead>

  <tbody>
    <% @projects.each do |project| %>
      <tr>
        <td><%= project.name %></td>
        <td><%= project.description %></td>
        <td><%= project.project_criterium.sum(:weight) %></td>
        <% if project.confirmed %>
          <td><%= link_to 'Deseleccionar', deselect_project_path(project),  method: :post, style: 'color: red' %></td>
        <% else %>
          <td><%= link_to 'Seleccionar', select_project_path(project),  method: :post, style: 'color: green' %></td>
        <% end %>
        <td><%= link_to 'Ver', project %></td>
        <td><%= link_to 'Editar', edit_project_path(project) %></td>
        <td><%= link_to 'Borrar', project, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

